body {
    font-family: Arial, sans-serif;
    text-align: center;
    margin-top: 50px;
    background-color: #f0f0f0;
    color: #333;
}

h1 {
    font-size: 36px;
    margin-bottom: 20px;
}

button {
    padding: 10px 20px;
    font-size: 16px;
    cursor: pointer;
    margin: 5px;
    border: none;
    border-radius: 5px;
    background-color: #007bff;
    color: white;
}

button:hover {
    background-color: #0056b3;
}

#character {
    margin-top: 30px;
    display: flex;
    flex-direction: column;
    align-items: center;
}

#character img {
    width: 150px;
    height: 150px;
    border-radius: 50%;
    margin-bottom: 10px;
}

#professions {
    margin-top: 30px;
    display: flex;
    justify-content: center;
    gap: 20px;
}

.profession {
    background-color: white;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    width: 200px;
}

.profession h3 {
    margin-top: 0;
}

#professions-list {
    display: flex;
    justify-content: center;
    gap: 10px;
    margin-bottom: 20px;
}

#professions-list div {
    padding: 10px 20px;
    background-color: #007bff;
    color: white;
    border-radius: 5px;
    cursor: pointer;
}

#professions-list div:hover {
    background-color: #0056b3;
}

.profession-details {
    background-color: white;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    margin-top: 20px;
    text-align: left;
    max-width: 400px;
    margin-left: auto;
    margin-right: auto;
}

.profession-details h3 {
    margin-top: 0;
    margin-bottom: 15px;
    text-align: center;
}

.profession-details div {
    margin-bottom: 10px;
}

.profession-details button {
    display: block;
    width: 100%;
    margin-top: 15px;
}

#miner-upgrades {
    margin-top: 20px;
}

#miner-upgrades button {
    margin-top: 10px;
}

#auto-increment-select {
    margin-top: 20px;
    padding: 10px;
    font-size: 16px;
}

#inventory {
    margin-top: 30px;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.tabs {
    display: flex;
    justify-content: center;
    margin-bottom: 20px;
}

.tab-button {
    padding: 10px 20px;
    cursor: pointer;
    border: none;
    border-radius: 5px;
    background-color: #007bff;
    color: white;
    margin: 0 5px;
}

.tab-button:hover {
    background-color: #0056b3;
}

.tab-content {
    display: none;
}

.inventory-grid {
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    grid-template-rows: repeat(2, 1fr);
    gap: 10px;
}

.inventory-slot {
    width: 100px;
    height: 100px;
    border: 1px solid #ccc;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    position: relative; /* Ajouté pour le positionnement du tooltip */
}

.inventory-slot img {
    max-width: 80%;
    max-height: 80%;
}

.item-count {
    font-size: 14px;
    margin-top: 5px;
}

.tooltip {
    visibility: hidden;
    position: absolute;
    background-color: rgba(0, 0, 0, 0.75);
    color: white;
    padding: 5px 10px;
    border-radius: 5px;
    z-index: 10;
    bottom: 100%; /* Positionne le tooltip au-dessus de l'élément */
    left: 50%;
    transform: translateX(-50%);
    white-space: nowrap;
    font-size: 14px;
    opacity: 0;
    transition: opacity 0.3s, visibility 0.3s;
}

.inventory-slot:hover .tooltip {
    visibility: visible;
    opacity: 1;
}

.empty-slot {
    background-color: #f0f0f0;
    border: 1px dashed #ccc;
    width: 100%;
    height: 100%;
}

#pagination {
    margin-top: 20px;
}

#pagination button {
    margin: 0 5px;
    padding: 8px 12px;
    background-color: #007bff;
    color: white;
    border: none;
    border-radius: 3px;
    cursor: pointer;
    font-size: 16px;
}

#pagination button:hover {
    background-color: #0056b3;
}

/* Combat Section Styles */
.combat-section {
    margin: 20px auto;
    max-width: 1000px;
    padding: 20px;
    background-color: #f5f5f5;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0,0,0,0.1);
}

.combat-area {
    display: grid;
    grid-template-columns: 1fr 2fr 1fr;
    gap: 20px;
    align-items: center;
}

/* Character and Monster Stats */
.character-stats, .monster-stats {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 15px;
    background-color: white;
    border-radius: 8px;
    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
}

.char-image img, .monster-image img {
    width: 150px;
    height: 150px;
    border-radius: 10px;
    object-fit: cover;
}

/* Health Bars */
.health-bar {
    width: 100%;
    height: 20px;
    background-color: #e0e0e0;
    border-radius: 10px;
    margin: 10px 0;
    position: relative;
    overflow: hidden;
}

.health-bar-fill {
    height: 100%;
    background-color: #4CAF50;
    transition: width 0.3s ease;
    width: 100%;
}

.health-text {
    position: absolute;
    width: 100%;
    text-align: center;
    color: white;
    text-shadow: 1px 1px 1px rgba(0,0,0,0.5);
    font-size: 12px;
    line-height: 20px;
}

/* Combat Info */
.combat-info {
    display: flex;
    flex-direction: column;
    gap: 15px;
    padding: 20px;
    background-color: white;
    border-radius: 8px;
    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
}

.zone-info {
    text-align: center;
}

.progress-bar {
    width: 100%;
    height: 20px;
    background-color: #e0e0e0;
    border-radius: 10px;
    margin: 10px 0;
    position: relative;
    overflow: hidden;
}

.progress-fill {
    height: 100%;
    background-color: #2196F3;
    transition: width 0.3s ease;
    width: 0%;
}

.progress-text {
    position: absolute;
    width: 100%;
    text-align: center;
    color: white;
    text-shadow: 1px 1px 1px rgba(0,0,0,0.5);
    font-size: 12px;
    line-height: 20px;
}

/* Combat Controls */
.combat-controls {
    display: flex;
    gap: 10px;
    justify-content: center;
}

.combat-button {
    padding: 10px 20px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    font-weight: bold;
    transition: background-color 0.3s;
}

#attack-btn {
    background-color: #f44336;
    color: white;
}

#attack-btn:hover {
    background-color: #d32f2f;
}

#auto-combat-btn {
    background-color: #2196F3;
    color: white;
}

#auto-combat-btn:hover {
    background-color: #1976D2;
}

/* Combat Log */
.combat-log {
    height: 150px;
    overflow-y: auto;
    padding: 10px;
    border: 1px solid #e0e0e0;
    border-radius: 5px;
    font-size: 14px;
    background-color: #fafafa;
}

.combat-log p {
    margin: 5px 0;
    padding: 3px 0;
    border-bottom: 1px solid #eee;
}

/* Stats Display */
.stats {
    display: flex;
    flex-direction: column;
    gap: 5px;
    width: 100%;
    text-align: center;
    font-size: 14px;
}

.stats span {
    padding: 3px;
    background-color: #f5f5f5;
    border-radius: 3px;
}

.button-appear {
    animation: fadeIn 0.5s ease-in;
}

@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

#experience-container {
    width: 100%;
    max-width: 600px;
    margin: 20px auto;
    background-color: #e0e0e0;
    border-radius: 5px;
    position: relative;
    height: 20px;
}

#experience-bar {
    height: 100%;
    background-color: #4CAF50;
    border-radius: 5px;
    transition: width 0.3s ease;
    width: 0%;
}

#experience-text {
    position: absolute;
    width: 100%;
    text-align: center;
    color: white;
    line-height: 20px;
    text-shadow: 1px 1px 1px rgba(0,0,0,0.5);
    font-size: 12px;
    top: 0;
}